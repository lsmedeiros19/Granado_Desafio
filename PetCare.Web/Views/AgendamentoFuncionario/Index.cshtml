@model IList<PetCare.Domain.Models.Veterinario>
<div class="masthead">
    <div class="container d-flex flex-column">

        @*<form class="form-inline md-form mr-auto mb-4">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn aqua-gradient btn-rounded btn-sm my-0" type="submit">Search</button>
        </form>*@

        <div class='form-row'>
            <div class="input-group date col-md-4">
                <label>Data da Consulta</label>
                <input type="datetime-local" class="form-control" id="DataConsulta">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="lblVeterinario" class="col-form-label">Veterinário</label>
            <select class="browser-default custom-select col-md-4">
                <option selected></option>
                @foreach (var item in Model)
                {
    <option value="@item.Id">@item.Nome</option>
}
            </select>
        </div>
        <div class="form-row">
            <div class="form-group col-md-12">
                <br />
                <input type="button" class="btn btn-primary float-right" value="Buscar" id="Buscar" />
                <br />
            </div>
        </div>

        <div id="list" class="row">
            <div class="table-responsive col-md-12">
                <table class="table table-striped" cellspacing="0" cellpadding="0">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Nome Animal</th>
                            <th>Animal</th>
                            <th>Data Consulta</th>
                            <th>Hora Consulta</th>
                            <th>Veterinário</th>
                            <th class="actions">Ações</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>Penelope Charmosa</td>
                            <td>Tom Tom</td>
                            <td>Cachorro</td>
                            <td>22/07/2020</td>
                            <td>11:30</td>
                            <td>Pernalonga</td>
                            <td class="actions">
                                <button type="button" class="btn btn-warning btn-xs" data-toggle="modal" data-target="#modalAgendamentoFuncionário">Editar</button>
                            </td>
                        </tr>

                    </tbody>
                </table>

            </div>
        </div>

        <div class="modal fade" id="modalAgendamentoFuncionário" tabindex="-1" role="dialog" aria-labelledby="modalAgendamentoFuncionário" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modalAgendamentoFuncionárioLabel">Alteração do Agendamento</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form>
                        <div class="form-group">
                            <label for="txtNomeCliente" class="col-form-label">Cliente</label>
                            <input type="text" class="form-control" id="txtNomeCliente" />
                        </div>
                        <div class="form-group">
                            <label for="txtpet" class="col-form-label">Nome do Animal</label>
                            <input type="text" class="form-control-sm" id="txtpet" />
                        </div>
                        <div class="form-group">
                            <label for="txtidade" class="col-form-label">Animal</label>
                            <select class="browser-default custom-select">
                                <option selected></option>
                                <option value="1">Cachorro</option>
                                <option value="2">Gato</option>
                                <option value="3">Hamster</option>
                            </select>
                        </div>
                        <div class="input-group date col-md-4">
                            <label>Data da Consulta</label>
                            <input type="datetime-local" class="form-control" id="DataConsulta">
                            <div class="input-group-addon">
                                <span class="glyphicon glyphicon-th"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="lblVeterinario" class="col-form-label">Veterinário</label>
                            <select class="browser-default custom-select col-md-4">
                                <option selected></option>
                                <option value="1">Godofredo Silva</option>
                                <option value="2">Patolino</option>
                                <option value="3">Pernalonga</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="txthistorico" class="col-form-label">Diagnóstico</label>
                            <input type="text" class="form-control-plaintext" id="txtpet" />
                        </div>
                    </form>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Salvar</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>